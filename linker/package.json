{
  "name": "root",
  "type": "module",
  "scripts": {
    "bump": "tsx scripts/bump.ts --version",
    "build:all": "pnpm --filter \"./packages/**\" build",
    "format:all": "pnpm --filter \"./packages/**\" format",
    "lint:all": "pnpm --no-bail --filter \"./packages/**\" lint",
    "organize:all": "pnpm --filter \"./packages/**\" organize",
    "prepublishOnly:all": "pnpm --filter \"./packages/**\" prepublishOnly",
    "publish:all": "pnpm --filter \"./packages/**\" publish",
    "test": "vitest",
    "test:once": "vitest --run",
    "preinstall": "git submodule update --init --recursive"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.10.6",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/ui": "^2.1.8",
    "berry-pretty": "^0.0.5",
    "brotli": "^1.3.3",
    "esbuild": "^0.24.2",
    "eslint": "^9.18.0",
    "fast-glob": "^3.3.3",
    "glob": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "organize-imports-cli": "^0.10.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8",
    "wesl-testsuite": "file:../wesl-testsuite",
    "yargs": "^17.7.2"
  },
  "packageManager": "pnpm@9.12.3"
}