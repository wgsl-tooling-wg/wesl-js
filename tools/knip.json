{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreDependencies": ["wesl-testsuite"],
  "workspaces": {
    "packages/*": {
      "entry": ["src/index.ts", "src/**/*.test.ts"],
      "project": ["src/**/*.ts", "src/test/**/*.test.ts", "test/**/*.ts", "test/**/*.test.ts"],
      "ignore": ["vite.config.ts", "vitest.config.ts"]
    }
  },
  "ignoreWorkspaces": [
    "packages/wesl-plugin/test/**",
    "packages/plugin-test/**",
    "packages/built-test/**",
    "examples/**"
  ],
  "ignore": [
    "**/*.d.ts",
    "**/node_modules/**",
    "packages/wesl-plugin/test/linkExtensionNoToml/**"
  ]
}