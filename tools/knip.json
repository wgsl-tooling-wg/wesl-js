{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreDependencies": ["wesl-testsuite"],
  "workspaces": {
    "packages/*": {
      "entry": ["src/index.ts", "src/**/*.test.ts"],
      "project": ["**/*.ts"],
      "vite": false
    }
  },
  "ignoreWorkspaces": [
    "packages/wesl-plugin/test/**",
    "packages/built-test/**",
    "packages/labs/**",
    "examples/**"
  ],
  "ignore": [
    "**/*.d.ts",
    "**/node_modules/**",
    "packages/wesl-plugin/test/linkExtensionNoToml/**"
  ]
}
