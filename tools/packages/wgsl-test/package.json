{
  "name": "wgsl-test",
  "version": "0.2.23",
  "type": "module",
  "bin": {
    "wgsl-test": "./bin/wgsl-test"
  },
  "files": [
    "bin",
    "dist",
    "images",
    "lib",
    "src"
  ],
  "repository": "github:wgsl-tooling-wg/wesl-js",
  "scripts": {
    "build": "tsdown && wesl-packager --outDir lib",
    "dev": "tsdown --watch",
    "prepublishOnly": "run-s build",
    "test": "cross-env FORCE_COLOR=1 vitest",
    "test:deno": "deno run -A --unstable-webgpu npm:vitest run",
    "test:once": "vitest run",
    "typecheck": "tsgo"
  },
  "publishConfig": {
    "bin": {
      "wgsl-test": "./dist/wgslTestMain.js"
    },
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./shaders": {
        "import": "./lib/weslBundle.js"
      },
      "./cli": {
        "import": "./dist/runTestCli.js"
      }
    },
    "main": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts"
    },
    "./shaders": {
      "import": "./lib/weslBundle.js"
    },
    "./cli": {
      "import": "./src/runTestCli.ts"
    }
  },
  "dependencies": {
    "glob": "^13.0.0",
    "pngjs": "^7.0.0",
    "thimbleberry": "^0.2.10",
    "webgpu": "^0.3.8",
    "wesl": "workspace:*",
    "wesl-gpu": "workspace:*",
    "wesl-tooling": "workspace:*",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/pngjs": "^6.0.0",
    "@webgpu/types": "^0.1.68",
    "dependent_package": "workspace:x",
    "wesl-packager": "workspace:x"
  },
  "peerDependencies": {
    "vitest": "^4.0.16",
    "vitest-image-snapshot": "workspace:^"
  },
  "peerDependenciesMeta": {
    "vitest": {
      "optional": true
    },
    "vitest-image-snapshot": {
      "optional": true
    }
  },
  "keywords": [
    "shader",
    "snapshot",
    "test",
    "testing",
    "unit-test",
    "visual-regression",
    "WebGPU",
    "WESL",
    "WGSL"
  ]
}
