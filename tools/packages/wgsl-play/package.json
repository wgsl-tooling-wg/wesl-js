{
  "name": "wgsl-play",
  "version": "0.0.28",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "repository": "github:wgsl-tooling-wg/wesl-js",
  "scripts": {
    "build": "tsdown",
    "dev": "vite test-page --config vite.config.ts",
    "prepublishOnly": "run-s build",
    "test": "vitest",
    "test:e2e": "playwright test",
    "typecheck": "tsgo"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./element": {
        "types": "./dist/WgslPlay.d.ts",
        "import": "./dist/WgslPlay.js"
      },
      "./bundle": {
        "types": "./dist/WgslPlay.d.ts",
        "import": "./dist/wgsl-play.js"
      }
    },
    "main": "./dist/index.js"
  },
  "exports": {
    ".": "./src/index.ts",
    "./element": "./src/WgslPlay.ts",
    "./bundle": {
      "types": "./src/WgslPlay.ts",
      "default": "./dist/wgsl-play.js"
    }
  },
  "dependencies": {
    "wesl": "workspace:*",
    "wesl-fetch": "workspace:*",
    "wesl-gpu": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "fflate": "^0.8.2",
    "nanotar": "^0.2.0",
    "wesl-plugin": "workspace:x"
  }
}
