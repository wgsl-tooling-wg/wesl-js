{
  "name": "wesl",
  "version": "0.7.18",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "repository": "github:wgsl-tooling-wg/wesl-js",
  "scripts": {
    "build": "tsdown",
    "build:docs": "typedoc --plugin typedoc-theme-hierarchy --entryPoints ./src/index.ts --entryPointStrategy expand --out ./docs",
    "build:nodebug": "vite build --config vite.nodebug.config.ts",
    "build:size": "./scripts/size-check.ts",
    "deploy:docsite": "run-s build:docs pages:deploy",
    "pages:deploy": "wrangler pages deploy --project-name wesl-js docs",
    "prepublishOnly": "run-s build",
    "test": "vitest --hideSkippedTests",
    "test:cts": "./scripts/test-cts.ts",
    "test:nodebug": "vitest run --config vitest.nodebug.config.ts",
    "test:once": "vitest run",
    "typecheck": "tsgo"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./bundle-decl": {
        "types": "./dist/weslBundleDeclUrl.d.ts",
        "import": "./dist/weslBundleDeclUrl.js"
      }
    },
    "main": "dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts"
    },
    "./bundle-decl": {
      "import": "./src/weslBundleDeclUrl.ts"
    },
    "./test-util": {
      "import": "./src/test-util.ts"
    }
  },
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@rollup/plugin-replace": "^6.0.3",
    "multi_pkg": "workspace:x",
    "terser": "^5.43.1",
    "typedoc": "^0.28.7",
    "typedoc-theme-hierarchy": "^6.0.0",
    "wrangler": "^4.22.0"
  },
  "peerDependencies": {
    "random_wgsl": "workspace:^"
  },
  "peerDependenciesMeta": {
    "random_wgsl": {
      "optional": true
    }
  },
  "license": "MIT",
  "keywords": [
    "webgpu",
    "wesl",
    "wgsl"
  ]
}
