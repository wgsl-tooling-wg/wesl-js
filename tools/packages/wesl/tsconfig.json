{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ESNext.AsyncIterable"],
    "types": ["@webgpu/types"],
    "moduleResolution": "bundler",
    "esModuleInterop": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "mini-parse": ["../mini-parse/src"],
      "wesl": ["./src"],
      "mini-parse/test-util": ["../mini-parse/src/test-util"],
      "mini-parse/vitest-util": ["../mini-parse/src/vitest-util"],
      "wesl-testsuite": ["../../../wesl-testsuite/src"]
    }
  },
  "include": ["src/**/*"],
  "references": [{ "path": "./tsconfig-node.json" }]
}
