{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node", "@webgpu/types"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "wesl": ["../wesl/src"],
      "mini-parse": ["../mini-parse/src"],
      "mini-parse/test-util": ["../mini-parse/src/test-util"],
      "wesl-testsuite": ["../../../wesl-testsuite/src"]
    }
  },
  "include": ["src/**/*", "src/viteTypes.d.ts"],
  "exclude": ["node_modules"]
}
