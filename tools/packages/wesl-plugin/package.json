{
  "name": "wesl-plugin",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "echo": "echo",
    "build": "tsup",
    "dev": "tsup --watch src --watch ../linker/dist",
    "lint": "eslint .",
    "play": "npm -C playground run dev",
    "prepublishOnly": "npm run build",
    "release": "bumpp && npm publish",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "toml": "^3.0.0",
    "unplugin": "^2.1.2",
    "wesl": "workspace:*"
  },
  "devDependencies": {
    "@nuxt/kit": "^3.15.2",
    "@nuxt/schema": "^3.15.2",
    "bumpp": "^9.10.1",
    "chalk": "^5.4.1",
    "nodemon": "^3.1.9",
    "rollup": "^4.31.0",
    "tsup": "^8.3.5",
    "webpack": "^5.97.1"
  },
  "packageManager": "pnpm@10.2.0",
  "description": "",
  "repository": "github:wgsl-tooling-wg/wesl-js",
  "keywords": [
    "wesl",
    "wgsl",
    "webgpu",
    "vite",
    "webpack",
    "rollup",
    "unplugin"
  ],
  "exports": {
    ".": {
      "types": "./src/types.d.ts",
      "import": "./dist/index.js"
    },
    "./astro": "./dist/astro.js",
    "./rspack": "./dist/rspack.js",
    "./vite": "./dist/vite.js",
    "./webpack": "./dist/webpack.js",
    "./rollup": "./dist/rollup.js",
    "./esbuild": "./dist/esbuild.js",
    "./nuxt": "./dist/nuxt.js",
    "./farm": "./dist/farm.js",
    "./types": "./dist/types.js",
    "./*": "./*"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./*"
      ]
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "peerDependencies": {
    "@farmfe/core": ">=1",
    "@nuxt/kit": "^3",
    "@nuxt/schema": "^3",
    "esbuild": "*",
    "rollup": "^3",
    "vite": ">=3",
    "webpack": "^4 || ^5"
  },
  "peerDependenciesMeta": {
    "@farmfe/core": {
      "optional": true
    },
    "@nuxt/kit": {
      "optional": true
    },
    "@nuxt/schema": {
      "optional": true
    },
    "esbuild": {
      "optional": true
    },
    "rollup": {
      "optional": true
    },
    "vite": {
      "optional": true
    },
    "webpack": {
      "optional": true
    }
  }
}