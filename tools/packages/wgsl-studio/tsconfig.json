{
  "extends": "../../tsconfig.node.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["node", "@webgpu/types", "mocha"],
    "skipLibCheck": true,
    "paths": {
      // for tsdown to bundle types for wesl-tooling
      "wesl-tooling": ["../wesl-tooling/src/index.ts"],
      "wesl-tooling/*": ["../wesl-tooling/src/*"]
    }
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["src/webview/**/*"]
}
