{
  "name": "wgsl-studio",
  "description": "WGSL/WESL previews and tests",
  "version": "0.1.2",
  "private": true,
  "type": "module",
  "repository": "github:wgsl-tooling-wg/wesl-js",
  "scripts": {
    "build": "tsdown",
    "build:vsix": "turbo run build:vsix:run",
    "build:vsix:run": "vsce package --no-dependencies",
    "dev": "tsdown --watch",
    "launch": "turbo run launch:code",
    "launch:code": "code --extensionDevelopmentPath=$PWD",
    "publish:vsix": "turbo run publish:vsix:run",
    "publish:vsix:run": "vsce publish --no-dependencies",
    "test:vscode": "turbo run test:vscode:run",
    "test:vscode:run": "vscode-test",
    "typecheck": "tsgo"
  },
  "main": "./dist/extension.mjs",
  "dependencies": {
    "webgpu": "^0.3.8"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.7.1",
    "wesl": "workspace:x",
    "wesl-gpu": "workspace:x",
    "wesl-tooling": "workspace:x",
    "wgsl-play": "workspace:x",
    "wgsl-test": "workspace:x"
  },
  "license": "MIT",
  "keywords": [
    "test",
    "WebGPU",
    "WESL",
    "WGSL"
  ],
  "activationEvents": [
    "onLanguage:wgsl"
  ],
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Visualization"
  ],
  "contributes": {
    "commands": [
      {
        "command": "wgsl.previewToyShader",
        "title": "WGSL Studio: Preview Toy Shader"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "wgsl.previewToyShader",
          "when": "editorLangId == wgsl",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "wgsl.previewToyShader",
          "when": "resourceExtname == .wgsl || resourceExtname == .wesl",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "wgsl",
        "extensions": [
          ".wgsl",
          ".wesl"
        ]
      }
    ],
    "configuration": {
      "title": "WGSL Studio",
      "properties": {
        "wgslStudio.nativeTestRunner.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the native WESL test runner. Disable if you prefer using Vitest for WESL tests."
        }
      }
    }
  },
  "displayName": "WGSL Studio",
  "engines": {
    "vscode": "^1.108.0"
  },
  "icon": "images/logo-small.png",
  "publisher": "webgpu-tools"
}
