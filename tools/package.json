{
  "name": "root",
  "version": "0.6.36",
  "private": true,
  "type": "module",
  "scripts": {
    "bench": "pnpm --filter bench bench",
    "bench:baseline": "pnpm --filter bench bench:baseline",
    "bench:validate": "pnpm --filter bench bench:validate",
    "build:all": "pnpm --filter \"*\" --parallel build",
    "bump": "monobump",
    "check:versions": "syncpack list-mismatches",
    "ci:check": "run-s lint:all build:all typecheck:all test:unit bench:validate",
    "ci:check-windows": "run-s build:all test:unit bench:validate",
    "echo:all": "pnpm --filter \"*\" exec pwd",
    "fix:all": "run-s fix:pkgJsonFormat fix:syncpack fix:biome",
    "fix:biome": "biome check --fix --unsafe",
    "fix:pkgJsonFormat": "syncpack format",
    "fix:syncpack": "syncpack fix-mismatches",
    "knip": "knip",
    "lint:all": "run-s lint:biome check:versions",
    "lint:biome": "biome check",
    "lint:oxlint": "oxlint",
    "preinstall": "git submodule update --init --recursive",
    "prep:examples": "tsx scripts/prep-examples.ts",
    "prepublishOnly:all": "pnpm --filter \"./packages/**\" prepublishOnly",
    "prepush": "run-s fix:all prepush:parallel",
    "prepush:parallel": "run-p lint:all build:all typecheck:all test:all test:cts bench:validate",
    "prepush:sequential": "run-s lint:all build:all typecheck:all test:all test:cts bench:validate",
    "publish:all": "pnpm --filter \"./packages/**\" publish",
    "test": "cross-env FORCE_COLOR=1 NODE_OPTIONS=--expose-gc vitest",
    "test:all": "run-p test:unit test:built test:examples test:e2e",
    "test:all:v1": "run-p test:unit:v1 test:built:v1 test:examples:v1",
    "test:built": "pnpm --filter built-test test:built",
    "test:built:v1": "cross-env V1_ONLY=true pnpm --filter built-test test:built",
    "test:cts": "pnpm --filter \"*\" --if-present test:cts",
    "test:e2e": "pnpm --filter \"*\" --if-present test:e2e",
    "test:examples": "pnpm --filter \"./examples/**\" test",
    "test:examples:v1": "cross-env V1_ONLY=true pnpm --filter \"./examples/**\" test",
    "test:integration": "pnpm --filter \"./packages/**\" test:integration",
    "test:linkExtension": "nodemon --config nodemon-link-extension.json",
    "test:unit": "cross-env NODE_OPTIONS=--expose-gc vitest --run --reporter=dot",
    "typecheck:all": "run-p typecheck:packages typecheck:examples typecheck:scripts",
    "typecheck:examples": "pnpm --parallel --filter \"./examples/**\" --filter \"!lygia-cli-example\" exec tsgo",
    "typecheck:packages": "pnpm --parallel --filter \"./packages/**\" typecheck",
    "typecheck:scripts": "tsgo --project tsconfig.json",
    "typecheck:watch": "nodemon --config nodemon-typecheck-watch.json"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.7.2",
    "@types/yargs": "^17.0.33",
    "@typescript/native-preview": "7.0.0-dev.20251012.1",
    "@vitest/ui": "3.2.4",
    "@webgpu/types": "^0.1.65",
    "berry-pretty": "^0.0.5",
    "brotli": "^1.3.3",
    "cross-env": "^10.1.0",
    "diff": "^8.0.2",
    "dpdm": "^3.14.0",
    "eslint": "^9.37.0",
    "fast-glob": "^3.3.3",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "knip": "^5.64.3",
    "monobump": "^0.1.3",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "oxlint": "^1.22.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "syncpack": "^13.0.4",
    "tsdown": "^0.15.9",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "wesl-testsuite": "link:../wesl-testsuite",
    "yargs": "^18.0.0"
  },
  "packageManager": "pnpm@10.19.0",
  "pnpm": {
    "ignoredBuiltDependencies": [
      "es5-ext"
    ],
    "onlyBuiltDependencies": [
      "core-js",
      "esbuild"
    ],
    "overrides": {}
  }
}
