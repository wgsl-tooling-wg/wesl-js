{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "bench": "pnpm --filter \"bench\" bench",
    "bench:validate": "pnpm --filter \"bench\" bench:validate",
    "build:all": "run-s build:libs build:tools build:tests",
    "build:libs": "pnpm --filter \"mini-parse\" --filter \"wesl\" --filter \"wesl-tooling\" build",
    "build:tests": "pnpm --filter \"bench\" --filter \"bulk-test\" --filter \"plugin-test\" --filter \"random_wgsl\" build",
    "build:tools": "pnpm --filter \"wesl-link\" --filter \"wesl-packager\" --filter \"wesl-plugin\" build",
    "bump": "tsx scripts/bump.ts --version",
    "check:versions": "syncpack list-mismatches",
    "ci:check": "run-s lint:all build:all typecheck:all test:unit bench:validate",
    "ci:check-windows": "run-s build:all test:unit bench:validate",
    "echo:all": "pnpm --filter \"**\" exec pwd",
    "fix:all": "run-s fix:pkgJsonFormat fix:syncpack fix:biome",
    "fix:biome": "biome check --fix --unsafe",
    "fix:pkgJsonFormat": "syncpack format",
    "fix:syncpack": "syncpack fix-mismatches",
    "lint:all": "run-s lint:biome lint:oxlint check:versions",
    "lint:biome": "biome check",
    "lint:oxlint": "oxlint",
    "preinstall": "git submodule update --init --recursive",
    "prep:examples": "tsx scripts/prep-examples.ts",
    "prepublishOnly:all": "pnpm --filter \"./packages/**\" prepublishOnly",
    "prepush": "run-s fix:all lint:all build:all typecheck:all test:all bench:validate",
    "publish:all": "pnpm --filter \"./packages/**\" publish",
    "test": "FORCE_COLOR=1 vitest",
    "test:all": "run-s test:unit test:examples",
    "test:examples": "pnpm --filter \"./examples/**\" test",
    "test:linkExtension": "nodemon --config nodemon-link-extension.json",
    "test:unit": "vitest --run",
    "typecheck:all": "run-s typecheck:packages typecheck:examples",
    "typecheck:examples": "pnpm --filter \"./examples/**\" --filter \"!lygia-cli-example\" exec tsgo",
    "typecheck:packages": "pnpm --filter \"./packages/**\" typecheck",
    "typecheck:watch": "nodemon --config nodemon-typecheck-watch.json"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.10",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@typescript/native-preview": "7.0.0-dev.20250702.1",
    "@vitest/ui": "3.2.4",
    "@webgpu/types": "^0.1.63",
    "berry-pretty": "^0.0.5",
    "brotli": "^1.3.3",
    "diff": "^8.0.2",
    "esbuild": "^0.25.5",
    "eslint": "^9.30.1",
    "fast-glob": "^3.3.3",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "organize-imports-cli": "^0.10.0",
    "oxlint": "^1.5.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "syncpack": "^13.0.4",
    "tsdown": "^0.12.9",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wesl-testsuite": "file:../wesl-testsuite",
    "yargs": "^18.0.0"
  },
  "packageManager": "pnpm@10.12.4",
  "pnpm": {
    "ignoredBuiltDependencies": ["es5-ext"],
    "onlyBuiltDependencies": ["core-js", "esbuild"],
    "overrides": {}
  }
}
